<?xml version="1.0" ?>
<odoo>
    <!-- Vista formulario para alumnos -->
    <record id="alumnos_form_view" model="ir.ui.view">
        <field name="name">alumnos.form.view</field>
        <field name="model">wp.alumnos</field>
        <field name="arch" type="xml">
            <form string="Alumnos">
                <sheet>
                    <group>
                        <group>
                            <field name="legajo"/>
                            <field name="nombre"/>
                            <field name="apellido"/>
                            <field name="fecha_nacimiento"/>
                            <field name="grado"/>
                            <field name="division"/>
                            <field name="turno"/>
                            <field name="institucion"/>
                            <field name="estado"/>
                            <field name="cliente_id"/>
                            <field name="curso_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista tree para alumnos -->
    <record id="alumnos_tree_view" model="ir.ui.view">
        <field name="name">alumnos.tree.view</field>
        <field name="model">wp.alumnos</field>
        <field name="arch" type="xml">
            <tree string="Alumnos">
                <field name="legajo"/>
                <field name="nombre"/>
                <field name="apellido"/>
                <field name="fecha_nacimiento"/>
                <field name="grado"/>
                <field name="division"/>
                <field name="turno"/>
                <field name="institucion"/>
                <field name="estado"/>
                <field name="cliente_id"/>
                <field name="curso_id"/>
            </tree>
        </field>
    </record>
</odoo>